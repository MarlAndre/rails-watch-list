<% if @list.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
    <h1><%= @list.name %></h3>
  </div>
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1534489573486-7d1fa4f436e4?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80')">
    <h1><%= @list.name %></h2>
  </div>
<% end %>



<div class="container">
  <div class="small-navbar-movie">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-ghost" %>
  </div>

  <div class="card-show">
    <% @list.bookmarks.each do |bookmark| %>
      <%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
      <h5><%= bookmark.movie.title %></h5>
      <p> <%= bookmark.movie.rating %> ⭐️</p>
      <p> <%= bookmark.movie.overview %> </p>
      <p><strong>Review</strong></p>
      <p><%= bookmark.comment %></p>
      <button class="delete-movie btn btn-danger">Delete</button>
      <%= link_to "", bookmark_path(bookmark), method: :delete, id:"delete-bookmark", class: "hidden" %>
    <% end %>
  </div>
</div>

<%= link_to "Homepage", lists_path %>
